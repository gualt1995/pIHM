<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tndnc.freshfood">

    <application
        android:name="com.tndnc.freshfood.MenuApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/title_activity_main_menu"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.tndnc.freshfood.activities.MainMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main_menu"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tndnc.freshfood.activities.MenuSelectActivity"
            android:label="@string/level_select_title"
            android:theme="@style/AppTheme" />
        <activity android:name="com.tndnc.freshfood.activities.AboutActivity"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>